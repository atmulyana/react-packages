{
    "name": "@react-packages/sortable-list",
    "version": "1.0.0",
    "description": "React component that can rearrange an item position in the list by dragging it to the expected position (can change the order of items)",
    "author": "AT Mulyana <atmulyana@yahoo.com>",
    "license": "MIT",
    "repository": "https://github.com/atmulyana/react-packages",
    "keywords": [
        "react",
        "component",
        "rearrange",
        "sortable",
        "sorted",
        "list",
        "item",
        "order",
        "reorder",
        "widget"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build:cjs": "tsc -b .",
        "build:esm": "tsc -b tsconfig.esm.json",
        "build": "shx rm -f *.tsbuildinfo && npm run build:esm && shx cp -f ./index.js ./index.mjs && npm run build:cjs",
        "prepack": "npm run build && shx cp -u ../../LICENSE ./LICENSE"
    },
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "import": "./index.mjs",
            "default": "./index.js"
        }
    },
    "files": [
        "index.*"
    ],
    "engines": {
        "node": ">=14.13.0"
    },
    "dependencies": {
        "javascript-common": ">=0.1.0"
    },
    "devDependencies": {
        "@types/react": "^19.1.13",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "react": ">=16.8.0"
    }
}
