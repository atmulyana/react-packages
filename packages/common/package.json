            "types": "./index.d.ts",
            "import": "./index.mjs",
            "default": "./index.js"
        }
    },
    "files": [
        "index.*"
    ],
    "devDependencies": {
        "@types/react": "^19.1.13",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "react": ">=16.8.0"
    }
}
